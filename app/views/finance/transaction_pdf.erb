<div id="page-yield">

  <div class="hor_line"></div>
  <h2><%= t('finance_transaction_report') %></h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">
    <div id ="main_info">
      <h4> <%= "#{t('from')} ( #{@start_date}) #{t('to')} ( #{@end_date})" %></h4>
    </div>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header">
          <td class="col-pdf"><%= t('sl_no') %></td>
          <td class="col-pdf"><%= t('particulars') %></td>
          <td class="col-pdf3"><%= "#{t('expenses')}( #{currency})" %></td>
          <td class="col-pdf3"><%=  "#{t('income')}( #{currency})" %></td>
        </tr>
        <%  index = 0 %>
        <% i = 0 %>
        <% income_total = 0 %>
        <% expenses_total = 0 %>
        <% c= 'even' %>
        <%  unless @hr.nil? %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= index+=1 %></td>
            <td class="col-pdf2"><%= t('salary') %></td>
            <td class="col-pdf3">&nbsp;<%= @salary %></td>
            <td class="col-pdf3"></td>
          </tr>
          <% i+= 1 %>
        <% end %>
        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td class="col-pdf"><%= index+=1 %></td>
          <td class="col-pdf2"><%= t('donations') %></td>
          <td class="col-pdf3"></td>
          <td class="col-pdf3">&nbsp;<%= @donations_total %></td>
        </tr>
        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td class="col-pdf"><%= index+=1 %></td>
          <td class="col-pdf2"><%= t('fees_account') %></td>
          <td class="col-pdf3"></td>
          <td class="col-pdf3">&nbsp;<%= @transactions_fees %></td>
        </tr>
        <% FedenaPlugin::FINANCE_CATEGORY.each do |category| %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= index+=1 %></td>
            <td class="col-pdf2"><%= "#{t(category[:category_name]+'_account')}"%> </td>
            <%  if  @category_transaction_totals["#{category[:category_name]}"][:category_type] == "income" %>
              <td class="col-pdf3"></td>
              <td class="col-pdf3"><%=  @category_transaction_totals["#{category[:category_name]}"][:amount]%></td>
            <% else %>
              <td class="col-pdf3"><%=  @category_transaction_totals["#{category[:category_name]}"][:amount]%></td>
              <td class="col-pdf3"></td>
            <% end %>
          </tr>
        <% end %>
        <% i+= 2 %>
        <% @other_transaction_categories.each_with_index do |t,i| %>
          <% income = t.total_income(@start_date,@end_date) %>
          <% expense = t.total_expense(@start_date,@end_date) %>
          <% if i == 19 %>
            <% i= 0 %>
            <% c= 'even' %>
            <tr class="page-break"><td colspan="3"></td></tr>
            <tr class="table-header"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('particulars') %></td><td class="col-pdf"><%= "#{t('expenses')}( #{currency})" %></td><td class="col-pdf"><%=  "#{t('income')}( #{currency})" %></td></tr>
          <% end %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= index+=1 %></td>
            <td class="col-pdf2"> <%= t.name %> </td>
            <td class="col-pdf3"><%= expense %></td>
            <td class="col-pdf3">&nbsp;<%= income %></td>
          </tr>
          <% i+= 1 %>
          <%income_total +=income %>
          <%expenses_total +=expense %>
        <% end %>

        <% if @grand_total >= 0 %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"></td>
            <td class="col-pdf1"><%= t('grand_total') %></td>
            <td class="col-pdf3"></td>
            <td class="col-pdf3">&nbsp;<%= sprintf("%.2f",@grand_total) %></td>
          </tr>

        <%  else %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"></td>
            <td class="col-pdf1"><%= t('grand_total') %></td>
            <td class="col-pdf3">&nbsp;<%= sprintf("%.2f",@grand_total * -1) %></td>
            <td class="col-pdf3"></td>
          </tr>

        <% end %>

      </table>
    </div>

  </div>

</div>
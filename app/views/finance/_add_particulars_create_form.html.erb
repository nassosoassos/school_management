<label class="head_label"><%= t('add') %> <%= t('particulars') %> <%= t('for') %> <%= t('additional') %> <%= t('fees_text') %><span></span></label>

<% form_remote_for :finance_fee_particulars, :url => {:action => 'add_particulars_create',:id => @collection_date.id} do |form| %>
  <div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label><%= t('fees_name') %> :</label> </div>
    <div class="input-container"><%= form.text_field :name %></div>
   </div>
     <div class="label-field-pair">
    <div class="label-container"><label><%= t('fees_description') %> :</label> </div>
    <div class="input-container"><%= form.text_field :description %></div>
   </div>
<div class="label-field-pair2">
  <div class="label-container2"><label><%= t('particulars') %> :</label></div>
    <div class="input-container2">
      <div class="opt"><%= radio_button("particulars","select","all",
      {:checked => true, :onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %><%= t('all') %></div>
     <div class="opt"><%= radio_button("particulars","select","student",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %><%= t('admission_number') %> </div>
      <div class="opt"> <%= radio_button("particulars","select","category",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %><%= t('student_category') %></div>
    </div>
   </div>
  <div id="student"></div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('fees_amount') %> :</label> </div>
    <div class="input-container"><%= form.text_field :amount %></div>
   </div>
    <%=  submit_tag "â–º #{t('add')}",:class=>'submit_button' %>

<% end %>




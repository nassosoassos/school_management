<div class="info">
  <div class="name"><%= t('fee_collection_name') %></div><div class="val"><span>:</span><%= @fee_collection.name %></div>
  <div class="name"><%= t('fee_category_name') %></div><div class="val"><span>:</span><%= @fee_category.name %></div>
  <div class="name"><%= t('start_date') %></div><div class="val"><span>:</span><%= @fee_collection.start_date %></div>
  <div class="name"><%= t('end_date') %></div><div class="val"><span>:</span><%= @fee_collection.end_date %></div>
  <div class="name"><%= t('due_date') %></div><div class="val"><span>:</span><%= @fee_collection.due_date %></div>
  <div class="extender"></div>
</div>
<% total_fees =0 %>
<% unless @fee_particulars.nil? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td>Sl no.</td>
      <td><%= t('particulars') %></td>
      <td><%= t('amount') %>  (<%= currency %>  )</td>
    </tr>
    <% i = 0 %>
    <tr class="tr-blank"></tr>
    <% @fee_particulars.each do |fee| %>
      <tr class="tr-<%= cycle("odd","even") %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-2"><%= shorten_string(fee.name,20) %></td>
        <td class="col-6"><%= fee.amount%></td>
      </tr>
      <% i += 1 %>
      <% total_fees += fee.amount %>
    <% end %>

    <tr class="tr-blank"></tr>
    <tr class="tr-blank"></tr>

    <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      <td class="col-8" colspan="2" ><%= t('total_fees') %></td>
      <td class="col-6" ><%= total_fees%></td>
    </tr>

    <% unless @total_discount == 0 %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-1"></td>
        <td class="col-1" colspan="2" ><span><%= t('discount') %></span></td>
      </tr>
      <% @batch_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> % </td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @student_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @category_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>

      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-8" colspan="2" ><%= t('total_discount') %></td>
        <td class="col-6" ><%= "#{@total_discount} %" %></td>
      </tr>

      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <% net_fee = (total_fees - ((total_fees*@total_discount)/100)) %>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-8" colspan="2" ><%= t('fees_to_be_paid') %></td>
        <td class="col-6" ><%= net_fee %></td>
      </tr>

    <% end %>
  </table>

<% end %>
<%= link_to t('pdf_report'),{:action => "pdf_fee_structure",:id => @student.id,:id2=>@fee_collection.id},:class => 'user_button'%>

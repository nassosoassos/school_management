<label class="head_label"><%= t('edit_master_category_for_fee') %><span></span></label>



<div id="grading-levels-form">

  <% form_remote_for @finance_fee_category,
    :url=>{:action=>'master_category_update',
    :id => @finance_fee_category.id}  do |f| %>

    <div id="form-errors"></div>
       <div class="label-field-pair">
    <div class="label-container"><%= f.label :"#{t('name')}" %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label :"#{t('description')}" %></div>
    <div class="input-container"><%= f.text_field :description %></div>
  </div>

     <div class="label-field-pair">
    <div class="label-container"><label><%= t('select_a_batch') %> :</label></div>
    <div class="input-container">
<% unless @finance_fee_category.batch.nil? %>
  <%= f.text_field :batch, :value => @finance_fee_category.batch.full_name, :disabled => true   %>
  <% else %>
  <%= f.text_field :batch, :value => "#{t('all')}", :disabled => true   %>
  <% end %>
    </div>

  </div>


  <%=  submit_tag "â–º #{t('save')}",:class=>'submit_button' %>
  <% end %>
</div>

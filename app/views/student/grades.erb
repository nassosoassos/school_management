<div id="content-header">
  <img src="/images/student_details/student_details_logo.jpg" />
  <h1><%= @student.full_name %></h1>
  <h3>Βαθμολογία </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="nav">
  <ul>
    <li><%= link_to "Εκτύπωση",
          {:controller => "student", :action => "grades_pdf", :id => @student.id} %>
</li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
  <div class="all-user">

    <table width="100%" id="listing">
      <tr class="tr-head">
        <td colspan="2"></td>
        <td colspan="3" align="center">ΒΑΘΜΟΛΟΓΙΑ</td>
        <td colspan="3"></td>
      <tr class="tr-head">
        <td>Ονοματεπώνυμο</td>
        <td>Όνομα Πατρός</td>
        <td>Παν/μίου</td>
        <td>Σχολής Μαθημάτων</td>
        <td>Προσόντων Διαγωγής</td>
        <td>Μόρια</td>
        <td>Τελική Βαθμολογία</td>
        <td>Παρατηρήσεις</td>
      </tr>
      <tr class="tr-odd">
        <td class="col-2"> <%= @student.full_name %></td>
        <% parent_id = @student.immediate_contact_id %>
        <td class="col-2"> <%= (parent_id.blank?) ? '' : Guardian.find(parent_id).first_name %></td>
        <% if @uni_gpa.blank? %>
          <% uni_gpa_string = "" %>
        <% else %>
          <% uni_gpa_string = sprintf( "%.02f" , @uni_gpa ) %>
        <% end %>
        <td class="col-5" align="center"> <%= uni_gpa_string %></td>
        <% if @mil_gpa.blank? %>
          <% mil_gpa_string = "" %>
        <% else %>
          <% mil_gpa_string = sprintf( "%.02f" , @mil_gpa ) %>
        <%end%>
        <td class="col-5" align="center"> <%= mil_gpa_string %></td>
        <% if @mil_p_gpa != nil %>
          <% mil_p_gpa_string = sprintf( "%.02f" , @mil_p_gpa) %>
        <% else %>
          <% mil_p_gpa_string = "" %>
        <% end %>

        <td class="col-5" align="center"> <%= mil_p_gpa_string %></td>
        <% if @global_sum.blank? %>
          <% global_sum_string = "" %>
        <% else %>
          <% global_sum_string = sprintf( "%.02f" , @global_sum) %>
        <% end %>
        <td class="col-5" align="center"> <%= global_sum_string %></td>
        <% if @total_gpa.blank? %>
          <% total_gpa_string = "" %>
        <% else %>
          <% total_gpa_string = sprintf( "%.02f" , @total_gpa) %>
        <% end %>
        <td class="col-5" align="center"> <%= total_gpa_string %></td>

        <% if @n_unfinished_subjects!=nil and @n_unfinished_subjects>0 %>
          <%  notes = @n_unfinished_subjects.to_s + " Μεταφερόμενα" %>
        <%elsif @n_unfinished_subjects.blank? %>
          <% notes = "" %>
        <% else %>
          <% if @student.gender == "m" %>
            <% notes = "Περατώσας" %>
          <% else %>
            <% notes = "Περατώσασα" %>
          <% end %>
        <% end %>
        <td class="col-5"> <%= notes %></td>
      </tr>
    </table>
    <p/>
    <h4 align="center"> Αναλυτική Βαθμολογία Σπουδαστή </h4>

      <div id="year_selector">
        Ακαδημαϊκό έτος
        <%= select :san_semester, :year, @years.sort!{|a, b| a.start_date<=>b.start_date}.map {|s| [s.name, s.id]},
          {:prompt => "Επιλέξτε ακαδημαϊκό έτος"},
          {:onChange => "#{remote_function(:url => {:action => "year_grades", :id => @student.id},
          :with => "'year_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          )}"} %>
          <%= image_tag("loader.gif",
        :align => "absmiddle",
        :border => 0,
        :id => "loader",
        :style =>"display: none;" ) %>


      </div>

      <div id='year_grades'>
      </div>
  </div>
</div>

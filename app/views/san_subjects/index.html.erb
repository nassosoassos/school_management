<div id="content-header">
     <%= image_tag("/images/show_settings.png") %>
  <h1>t('san_subjects')</h1>
  <h3>t('control')</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to_remote "Προσθήκη νέου", :url=>{:controller=>:"san_subjects", :action => "new"} %></li>
  </ul>
</div>


<div id="page-yield">
  <div id="flash-box">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  </div>
  <div class="box">
    <div id="san_subjects">

	<div id="subjects">
      <table width="100%" id="listing">
        <tr class="tr-head">
          <td colspan="3" align="center"> t('university_subjects')</td>
        </tr>
	 <tr class="tr-head">
       <td><%= t('title') %></td>
       <td></td>
       <td></td>
    </tr>
    <% @san_university_subjects.sort!{|a, b| a.kind==b.kind ? (a.title <=> b.title):a.kind <=>b.kind}.each do |san_subject| %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-2"><%=h san_subject.title %></td>
      <td class="col-5"> <%= link_to_remote image_tag("/images/buttons/edit_small.png"), :url=>{:action=>'edit', :id=>san_subject.id}, :method=>:get %></td>
      <td class="col-5"> <%= link_to image_tag("/images/buttons/tt_delete.png"), san_subject, :confirm => t('are_you_absolutely_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @san_university_subjects %>
</div>
	<div id="subjects">
      <table width="100%" id="listing">
        <tr class="tr-head">
          <td colspan="3" align="center"> t('military_subjects') </td>
        </tr>
	 <tr class="tr-head">
       <td><%= t('title') %></td>
       <td></td>
       <td></td>
    </tr>
    <% @san_military_subjects.sort!{|a, b| a.kind==b.kind ? (a.title <=> b.title):a.kind <=>b.kind}.each do |san_subject| %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-2"><%=h san_subject.title %></td>
      <td class="col-5"> <%= link_to_remote image_tag("/images/buttons/edit_small.png"), :url=>{:action=>'edit', :id=>san_subject.id}, :method=>:get %></td>
      <td class="col-5"> <%= link_to image_tag("/images/buttons/tt_delete.png"), san_subject, :confirm => t('are_you_absolutely_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @san_military_subjects %>
	
    </div>
  </div>
<div id="modal-box" style="display:none;"></div>

<div class="extender"></div>
 </div></div>

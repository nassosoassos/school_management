<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('all_subjects') %></h1>
  <h3><%= t('details_about_subject') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('view_all')}", :action => "view_all" %></li>
    <li><%= link_to "#{t('add_new')}", :action => "new" %></li>
  </ul>
</div>



<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
  <div class="all-user">
	<table>
	 <tr>
	   <th>Id</th>
	   <th>Title</th>
	   <th>Type</th>
  </tr>

<% @san_subjects.each do |san_subject| %>
  <tr>
    <td><%=h san_subject.id %></td>
    <td><%=h san_subject.title %></td>
    <td><%=h san_subject.kind %></td>
    <td><%= link_to 'Show', san_subject %></td>
    <td><%= link_to 'Edit', edit_san_subject_path(san_subject) %></td>
    <td><%= link_to 'Destroy', san_subject, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

  </div>
</div>

      </div>
  </div>


  <%= submit_tag "", :value => "#{t('select_semester')}", :class => "button", :type => "button", :onclick => "#{remote_function(:url => {:action => "show_group_semester"}, :with => "'semester_year='+$('san_semester_year').value+'&semester_number='+$('san_semester_number').value")}" %>

  <div id="san_semester">

  </div>
  <div id="subscription">
  </div>



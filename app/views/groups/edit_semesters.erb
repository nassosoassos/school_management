<div id="content-header">
  <%= image_tag("/images/user_profile/user_profile_logo.jpg") %>
  <h1><%= @group.name %></h1>
  <h3><%= t('san_semesters') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="flash-box">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  </div>

  <%= link_to_remote 'Εγγραφή σε νέο εξάμηνο', :url => { :controller=>"groups",:action => 'subscribe_semester', :id => @group.id} %>
  <p/>
<div id="semester_list">


  <table width="50%" id="listing">
    <tr class="tr-head">
      <td>Αριθμός</td>
      <td>Ακαδημαϊκό Έτος</td>
      <td>Τρέχον</td>
      <td>Περατωθέν</td>
      <td>Ενέργειες</td>
    </tr>
    <% @active_semesters.each do |sem| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td align="center"><%= sem[:number] %></td>
        <td><%= sem[:year] %></td>
        <% if sem[:is_active] %>
          <td align="center"><%= radio_button_tag sem[:id], "active", true %> </td>  
          <td align="center"><%= radio_button_tag sem[:id], "past" %> </td>  
        <% else %>
          <td align="center"><%= radio_button_tag sem[:id], "active" %> </td>  
          <td align="center"><%= radio_button_tag sem[:id], "past", true %> </td>  
        <% end %>
        <td> <%= link_to 'Ακύρωση Εγγραφής', {:controller=>"groups", :action=>"delete_semester", :semester_id=>sem[:id]}, :method=>:post, :confirm => 'Είστε σίγουρος;' %></td>
      </tr>
    <% end %>
  </table>
  <p/>

  </div>
<div class="options">
  Η τάξη αποφοίτησε: <%= check_box_tag "class" %>
</div>


<div id="modal-box" style="display:none;"></div>
</div>

<div id="content-header">
     <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('subject') %></h1>
  <h3><%= t('home') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="flash-box">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  </div>


<% form_tag("print_lists", :method=>"get") do %>
    <div class="label-field-pair">
      <label for="YearSelectBox" id="YearSelectBoxLabel">Ακαδημαϊκό Έτος:</label></TD>
    <% year_options = @all_years.map{|y| [y, y]} %>
    <% year_options.push ["Όλα", 'all'] %>

  <div class="text-input-bg"><%= select_tag "group_year", options_for_select(year_options) %></div>
      </div>
    <div class="label-field-pair">
	<label for="ListSelectBox" id="ListSelectBoxLabel">Τύπος Λίστας:</label></TD>
  <div class="text-input-bg"><%= select_tag "list_type", options_for_select([["Λίστα Αρχαιότητας",0], ["Λίστα Περατωσάντων",1], ["Λίστα Μη Περατωσάντων",2]]) %></div>
      </div>
  </div>

  <%= submit_tag "", :value => 'Προβολή', :class => "button", :type => "button", :onclick => "#{remote_function(:url => {:action => "show_lists", :id=>@group.id}, :method => :get, :with => "'group_year='+$('group_year').value+'&list_type='+$('list_type').value")}" %>
  <%= submit_tag "", :value => 'Εκτύπωση', :class => "button", :target=>'_blank' %>

<% end %>

<div id="list"> 
</div>

<div id="modal-box" style="display:none;"></div>

<div class="extender"></div>
</div>

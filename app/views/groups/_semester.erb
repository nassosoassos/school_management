<% if @san_semester.nil? %>
  <div id="semester_no_result"><%= t('no_semester_found') %></div>
<% else %>
<p>
  <b>Αριθμός</b>
  <%=h @san_semester.number %>
</p>

<p>
  <b>Ακαδημαϊκό Έτος</b>
  <%=h @san_semester.year %>
</p>

<p>
  <b>Συντ. Στρατιωτικών Μαθημάτων:</b>
  <%=h @san_semester.uni_weight %>
</p>

<p>
  <b>Συντ. Πανεπιστημιακών Μαθημάτων:</b>
  <%=h @san_semester.mil_weight %>
</p>

<p>

<table>
  <tr>
    <th>Τίτλος</th>
    <th>Τύπος</th>
    <th>Προαιρετικό</th>
  </tr>

<% SemesterSubjects.find_all_by_semester_id(@san_semester.id).each do |semester_subject| %>
  <tr>
    <td><%=h SanSubject.find(semester_subject.subject_id).title %></td>
    <td><%=h SanSubject.find(semester_subject.subject_id).kind %></td>
    <% if semester_subject.optional %>
    <td>Προαιρετικό</td>
    <% else %>
    <td>Υποχρεωτικό</td>
    <% end %>
  </tr>
<% end %>
</table>

</p>


	
<% end %>

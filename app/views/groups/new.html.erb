<h1>New group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :first_year %><br />
    <%= f.datetime_select :first_year %>
  </p>
  <p>
    <%= f.label :graduation_year %><br />
    <%= f.datetime_select :graduation_year %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', groups_path %>
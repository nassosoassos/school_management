<div id="content-header">
     <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('subject') %></h1>
  <h3><%= t('home') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "Εγγραφή σε Εξάμηνο", :action => "semester_subscription" %></li>
    <li><%= link_to "Βαθμοί", :action => "grades" %></li>
    <li><%= link_to "Λίστες", :action => "lists" %></li>
    <li><%= link_to 'Μετατροπή', edit_group_path(@group) %> 
    <li><%= link_to "Προβολή όλων", :action => "index" %></li>
  </ul>
</div>


<div id="page-yield">
  <div id="flash-box">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  </div>
<div class="box">

	<div id="subjects">



<p>
  <b>Όνομα τάξης:</b>
  <%=h @group.name %>
</p>

<p>
  <b>Ημερομηνία πρώτης εγγραφής:</b>
  <%=h @group.first_year %>
</p>

<p>
<b>Ημερομηνία αποφοίτησης:</b>
  <%=h @group.graduation_year %>
  </p>

 <div class="students-table">
  <table align="center" width="100%" cellpadding="1" cellspacing="1" id="listing">
    <tr class="tr-head">
      <td>Α/Α</td>
      <td>Ονοματεπώνυμο</td>
      <td>Α.Μ.</td>
      <td></td>
    </tr>

    <% Student.find_all_by_group_id(@group.id).sort!{|a, b| a.last_name <=> b.last_name}.each_with_index do |r, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1">
          <%= i+1 %>
        </td>

        <td class="col-2">
          <%= link_to r.full_name,:controller => "student", :action => "profile", :id => r.id %>
        </td>

        <td class="col-1">
          <%= r.admission_no %>
        </td>

        <td class="col-7">
          <%=  link_to  "#{t('view_profile')}", :controller => "student", :action => "profile", :id => r.id %>
        </td>
      </tr>
    <% end %>
  </table>
</div> 


<div id="modal-box" style="display:none;"></div>

<div class="extender"></div>
 </div></div>

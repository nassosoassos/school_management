<div id="grading-levels-form">
  <h4><%= @group.name %></h4>

  <% form_remote_for @san_semester, :url=>{:controller => "groups", :action => "add_semester"}, :html=>{:method => "post"} do |f| %>

    <div class="label-field-pair">
	<label for="SemesterSelectBox" id="SemesterSelectBoxLabel">Εξάμηνο</label>
    <div class="text-input-bg"><%= f.select( :id, @semester_collection.map {|sem| [sem[:name], sem[:id]]}) %></div>
      </div>

    <div id="form-errors"></div>

    <%= f.submit  "", :value => "Εγγραφή", :class => "submit_button"  %>

  <% end %>
</div>

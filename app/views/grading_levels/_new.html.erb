<div id="grading-levels-form">
  <h4><%= @batch.full_name unless @batch.nil? %></h4>

  <% form_remote_for @grading_level do |f| %>

    <div id="form-errors"></div>

    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>

    <div class="label-field-pair">
      <%= f.label :"#{t('name')}"%>
      <div class="input-field"><%= f.text_field :name  %></div>
    </div>

    <div class="label-field-pair">
      <%= f.label :min_score, t('min_score') %>
      <div class="input-field"><%= f.text_field :min_score %></div>
    </div>

    <div class="label-field-pair">
      <%= f.label :description, "Description" %>
      <div class="input-field"><%= f.text_field :description %></div>
    </div>
    <% if @credit %>
    <div class="label-field-pair">
      <%= f.label :credit_points, "Credit Points" %>
      <div class="input-field"><%= f.text_field :credit_points %></div>
    </div>
    <% end %>

    <%= f.submit "â–º #{t('save')}", :class => 'submit_button' %>




  <% end %>
</div>
